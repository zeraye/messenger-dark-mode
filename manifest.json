{
  "manifest_version": 2,

  "name": "Messenger Dark Mode",
  "description": "Enable dark mode for messenger",
  "homepage_url": "https://github.com/zeraye/messenger-dark-mode",
  "version": "1.0.0",
  "developer": {
    "name": "zeraye",
    "url": "https://github.com/zeraye"
  },

  "icons": {
    "64": "src/icons/addon-icon-64.png"
  },

  "permissions": ["*://www.messenger.com/*"],

  "content_scripts": [
    {
      "matches": ["*://www.messenger.com/*"],
      "js": ["src/js/index.js"]
    }
  ]
}
